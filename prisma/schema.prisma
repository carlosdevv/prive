// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id         String   @id @unique @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       Role     @default(FREE)
  created_at DateTime @default(now())
  is_active  Boolean  @default(true)
  assets     Asset[]
  goals      Goal[]
  patrimony  Float?   @default(0)
}

model Asset {
  id     String    @id @unique @default(cuid())
  name   String
  class  ClassEnum
  value  Float?
  amount Float?
  goal   Int?
  userId String
  User   User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Goal {
  id     String    @id @unique @default(cuid())
  class  ClassEnum
  value  Float?    @default(0)
  goal   Float?    @default(16.6666667)
  userId String
  User   User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum Role {
  FREE
  SUBSCRIBER
}

enum ClassEnum {
  RENDA_FIXA
  ACAO
  FII
  CRYPTO
  STOCK
  REIT
}
